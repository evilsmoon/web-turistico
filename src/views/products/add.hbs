<div class="container p-4">
    <div class="row">

        <div class="col-xs-12 col-md-9 col-md-push-3">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-12 mx-auto">
                                <div class="card">
                                    <div class="card-header">
                                        <div class="panel-heading text-center">
                                            <h3>
                                                <div class="panel-title">Registro Productos</div>
                                            </h3>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <form action="/products/add" method="POST" class="row g-3 needs-validation"
                                            enctype="multipart/form-data">

                                            <div class="col-md-4">
                                                <label class="form-label">Nombre:</label>
                                                <input type="text" name="PRODUCTO_NOMBRE" class="form-control"
                                                    placeholder="NOMBRE" maxlength="60" id="searchName"
                                                    style="text-transform:uppercase"
                                                    oninput="if(this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);"
                                                    required autofocus>
                                                <font size=2 class="text-danger">Mínimo 3 caracteres</font>
                                            </div>

                                            <div class="col-md-4">
                                                <label class="form-label">Categoria:</label>
                                                <div class="form-label">
                                                    <select name="CATEGORIA_ID" class="form-select"
                                                        aria-label="Default select example" required>
                                                        <option value="0" selected>SELECCIONE</option>
                                                        {{#each category}}
                                                        <option value="{{CATEGORIA_ID}}">{{CATEGORIA_NOMBRE}}</option>
                                                        {{/each}}
                                                    </select>
                                                </div>
                                            </div>

                                            <div class="col-md-4">
                                                <label class="form-label">Presentación:</label>
                                                <div class="form-label">
                                                    <select name="PRESENTACION_ID" class="form-select"
                                                        aria-label="Default select example" id="presentation" required>
                                                        <option value="0" selected>SELECCIONE</option>
                                                        {{#each presentation}}
                                                        <option value="{{PRESENTACION_ID}}">{{PRESENTACION_NOMBRE}}
                                                        </option>
                                                        {{/each}}
                                                    </select>
                                                </div>
                                            </div>

                                            <div class="col-md-4">
                                                <label class="form-label">Unidad de Medida: <input type="text"
                                                        name="peso" id="presentName1" size=4 value="" readonly></label>
                                                <div class="form-label">
                                                    <select name="MEDIDA_ID" class="form-select"
                                                        aria-label="Default select example" required>
                                                        <option value="0" selected>SELECCIONE</option>
                                                        {{#each measure}}
                                                        <option value="{{MEDIDA_ID}}">{{MEDIDA_NOMBRE}}
                                                        </option>
                                                        {{/each}}
                                                    </select>
                                                </div>
                                            </div>

                                            <div class="col-md-4">
                                                <label class="form-label">Peso Unitario: <input type="text" name="peso"
                                                        id="presentName2" size=4 value="" readonly></label>
                                                <input type="number" step="0.01" name="PRODUCTO_MEDIDA"
                                                    class="form-control" placeholder="PESO" maxlength="6"
                                                    oninput="if(this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);"
                                                    required>
                                                <font size=2 class="text-danger">Solo ingrese números</font>
                                            </div>

                                            <div class="col-md-4">
                                                <label class="form-label">Cantidad Disponible: <input type="text"
                                                        name="cantidad" id="presentName3" size=4 value=""
                                                        readonly></label>
                                                <input type="text" name="PRODUCTO_CANTIDAD" placeholder="CANTIDAD"
                                                    class="form-control"
                                                    onkeypress="return (event.charCode >= 48 && event.charCode <= 57) || event.charCode == 0 "
                                                    maxlength="6"
                                                    oninput="if(this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);"
                                                    required>
                                                <font size=2 class="text-danger">Solo ingrese números</font>
                                            </div>

                                            <div class="col-md-4">
                                                <label class="form-label">Precio Unitario:</label>
                                                <input type="text" name="peso" size=4 id="presentName4" value=""
                                                    readonly>
                                                <input type="number" step="0.01" name="PRODUCTO_PRECIO"
                                                    class="form-control" placeholder="PRECIO UNITARIO" maxlength="6"
                                                    oninput="if(this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);"
                                                    required>
                                                <font size=2 class="text-danger">Solo ingrese números</font>
                                            </div>

                                            <div class="col-md-4">
                                                <label class="form-label">Fecha de Cosecha:</label>
                                                <div class="form-label">
                                                    <input class="form-control" name="PRODUCTO_FECHACOCECHA" type="date"
                                                        required>
                                                    <font size=2 class="text-danger">La fecha de cocecha debe ser menor
                                                        a la del día de hoy</font>
                                                </div>
                                            </div>

                                            <div class="col-md-4">
                                                <label class="form-label">Fecha de Expiración:</label>
                                                <div class="form-label">
                                                    <input class="form-control" name="PRODUCTO_FECHALIMITE" type="date"
                                                        required>
                                                    <font size=2 class="text-danger">La fecha de expiración debe ser
                                                        mayor a la del día de hoy</font>
                                                </div>
                                            </div>

                                            <div class="col-md-6">
                                                <label class="form-label">Descripción:</label>
                                                <textarea name="PRODUCTO_DESCRIPCION" rows="4" class="form-control"
                                                    placeholder="DESCRIPCIÓN" maxlength="200"
                                                    style="text-transform:uppercase"
                                                    oninput="if(this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);"
                                                    required></textarea>
                                                <font size=2 class="text-danger">Mínimo 10 caracteres</font>
                                            </div>

                                            <div class="col-md-6">
                                                <label class="form-label">Oferta:</label>
                                                <textarea name="OFERTA_DESCRIPCION" rows="4" class="form-control"
                                                    placeholder="OFERTA" maxlength="200"
                                                    style="text-transform:uppercase"
                                                    oninput="if(this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);"></textarea>
                                            </div>

                                            <div class="mb-3">
                                                <input type="file" accept="image/*" name="SUBIR_IMAGEN"
                                                    class="form-control" onchange="loadFile(event)">
                                                <font size=2 class="text-danger">Solo subir imagenes</font>
                                            </div>
                                            <div class="mb-3 text-center">
                                                <img id="output" class="img-thumbnail" width="300px" />
                                            </div>

                                            <div class="col-12 text-center">
                                                <button class="btn btn-success">
                                                    Guardar
                                                </button>
                                                <a href="/products" class="btn btn-danger">Cancelar</a>
                                            </div>

                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xs-12 col-md-3 col-md-pull-9">
            <div class="panel panel-default">
                <div class="card">
                    <div class="card-header">
                        <div class="panel-heading text-center">
                            <h3>
                                <div class="panel-title">Información</div>
                            </h3>
                        </div>
                    </div>
                    <div class="card-body text-secondary">
                        <h5 class="card-title">Categoria:</h5>
                        {{#each category}}
                        <p>
                            <label for="">{{CATEGORIA_NOMBRE}}:</label> {{CATEGORIA_DESCRIPCION}}<br>
                        </p>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<script>
    var loadFile = function (event) {
        var reader = new FileReader();
        reader.onload = function () {
            var output = document.getElementById('output');
            output.src = reader.result;
        };
        reader.readAsDataURL(event.target.files[0]);
    };

    fetch('/autocompleteName')
        .then(res => res.json())
        .then(data => {

            var productnames = [];

            const products = '';

            data.products.forEach(names => {
                productnames.push(names.PRODUCTO_NOMBRE);
            });

            let uniqProducts = Array.from(new Set(productnames));

            $("#searchName").autocomplete({
                source: uniqProducts
            });

        });

    var select = document.getElementById('presentation');
    select.addEventListener('change',
        function () {
            var selectedOption = this.options[select.selectedIndex];
            var namePresent = '(' + selectedOption.text + ')';
            //console.log(selectedOption.value + ': ' + selectedOption.text);
            document.getElementById("presentName1").value = namePresent;
            document.getElementById("presentName2").value = namePresent;
            document.getElementById("presentName3").value = namePresent;
            document.getElementById("presentName4").value = namePresent;
        });

</script>