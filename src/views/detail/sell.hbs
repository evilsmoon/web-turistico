<div class="container p-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <div class="panel-heading text-center">
                        <h3>
                            <div class="panel-title">Ventas Realizadas</div>
                        </h3>
                    </div>
                </div>
                <div class="card-body">
                    <div class="col-md-8 text-center">
                        <form class="d-flex" action="/detail/sell/search" method="GET">
                            <input class="form-control me-2" type="search" name="buscar" id="search"
                                placeholder="Buscar Usuario" aria-label="Search">
                            <button class="btn btn-outline-success " type="submit">Buscar</button>
                        </form>
                    </div>

                    {{#if noSell}}
                    <h3>Usted no tiene ventas realizadas</h3>
                    <a href="/products" class="btn btn-primary m-4">
                        Regresar
                    </a>
                    {{/if}}

                    {{#if noUser}}
                    <div class="col-md-4 mx-auto">
                        <div class="mb-3">
                        </div>
                        <div class="card card-body border-danger text-center">
                            <p class="text-danger">Usuario no Encontrado
                                <a href="/detail/sell" class="btn btn-outline-primary">
                                    Regresar
                                </a>
                            </p>
                        </div>
                    </div>
                    {{/if}}

                    {{#if detail}}
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Fecha</th>
                                <th scope="col">Comprador</th>
                                <th scope="col">Telefono</th>
                                <th scope="col">Correo</th>
                                <th scope="col">Producto</th>
                                <th scope="col">Cantidad</th>
                                <th scope="col">Total</th>
                                <th scope="col">Tipo de Pago</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each detail}}
                            <tr>
                                <td>{{VENTA_FECHA}}</td>
                                <td>{{PERSONA_NOMBRE}}</td>
                                <td>{{PERSONA_TELEFONO}}</td>
                                <td>{{PERSONA_EMAIL}}</td>
                                <td>{{PRODUCTO_NOMBRE}}</td>
                                <td>{{DETALLE_CANTIDAD}}</td>
                                <td>{{DETALLE_PRECIOTOTAL}}</td>
                                <td>{{PAGO_NOMBRE}}</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                    {{else}}
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>